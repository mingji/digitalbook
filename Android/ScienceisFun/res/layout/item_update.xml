<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <com.belwadi.sciencefun.view.HyIconView
        android:id="@+id/imgUserPic"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgUserPic"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="7dip"
        android:layout_toRightOf="@+id/imgUserPic"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingBottom="7dip"
        android:paddingTop="7dip"
        android:singleLine="false"
        android:text="Fred John has joined 7th Grade Section B of national public School."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtText"
        android:layout_marginLeft="5dip"
        android:text="Sep 12, 2014"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtText"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:text="@string/view_profile"
        android:textColor="@color/grade_blue"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnAddContent"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_toLeftOf="@+id/txtViewDetail"
        android:layout_below="@+id/txtText"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/icon_invite"        
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/btnAddContent"
        android:layout_marginTop="5dip"
        android:background="@color/lightgray"
        android:visibility="visible" />

</RelativeLayout>