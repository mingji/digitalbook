<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtConceptName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:text="Cell Division"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.belwadi.sciencefun.view.ExGridView
        android:id="@+id/gridConceptVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConceptName"
        android:background="@android:color/transparent"
        android:columnWidth="90dip"
        android:gravity="center"
        android:horizontalSpacing="10dip"
        android:numColumns="3"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp"
        android:layout_marginRight="10dip"
        android:visibility="visible" >
    </com.belwadi.sciencefun.view.ExGridView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/gridConceptVideo"
        android:layout_marginTop="5dip"
        android:background="@color/lightgray" />

</RelativeLayout>