<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/layUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
            android:gravity="center"
            android:orientation="vertical" >

            <com.belwadi.sciencefun.view.HyIconView
                android:id="@+id/imgPic"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="Tejas Singh"
                android:textColor="@color/darkgray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layUser"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/layUser"
            android:text="tejas.singh@gmail.com"
            android:textColor="@color/grade_blue"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMail"
            android:layout_below="@+id/txtMail"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="4dip"
            android:text="National Public School, Bangalore"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtSchool"
            android:layout_below="@+id/txtSchool"
            android:layout_marginTop="4dip"
            android:text="Grade 7, Section A"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtClass"
            android:layout_marginRight="20dip"
            android:layout_marginTop="8dip"
            android:text="@string/view_profile"
            android:textColor="@color/grade_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtClass"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@+id/txtViewProfile"
            android:background="@color/grade_blue"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="Add Friend"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/txtViewProfile"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:background="@color/lightgray" />
    </RelativeLayout>

</LinearLayout>