<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/repo_content_grayborder" >

        <LinearLayout
            android:id="@+id/layNoteUser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:gravity="center"
            android:orientation="vertical" >

            <com.belwadi.sciencefun.view.HyIconView
                android:id="@+id/imgNoteUser"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtNoteUserName"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Belwadi Srikanth"
                android:textColor="@color/darkgray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layNoteUser1"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/layNoteUser1"
            android:text="12 Sep 2014"
            android:textColor="@color/darkgray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtNoteDate"
            android:layout_below="@+id/txtNoteDate"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:singleLine="false"
            android:text="CELL DIVISION\nThis is mynotes about a feild trip where we went to a labaratory and observed cell division through microscope."
            android:textColor="@color/darkgray"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imgDefault"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_pin"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dip" >

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dip"
                android:src="@drawable/icon_delete"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgReport"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_toLeftOf="@+id/imgDelete"
                android:src="@drawable/icon_flag" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>